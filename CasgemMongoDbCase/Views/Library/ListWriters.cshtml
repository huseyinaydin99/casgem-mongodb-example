@model List<CasgemMongoDbCase.Models.WriterWithCity>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Writer List</title>
</head>
<body>
    <div class="container">
        <br />
        <br />
        <br />
        <br />
        <h3>Yazar Listesi</h3>
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Yazar Adı</th>
                <th>Yazar Yaşı</th>
                <th>Yazar Şehri</th>
                <th>#</th>
                <th>#</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Cities.Select(x=>x.Name).FirstOrDefault()</td>
                    <td><a href="/Library/UpdateWriter/@item.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Library/DeleteWriter/@item.Id" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </table>
        <a href="/Library/AddWriter" class="btn btn-outline-success">Yazar Ekle</a>
    </div>
</body>
</html>
