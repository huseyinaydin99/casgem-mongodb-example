@model List<CasgemMongoDbCase.Models.City>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>City List</title>
</head>
<body>
    <div class="container">
        <br />
        <br />
        <br />
        <br />
        <h3>Şehir Listesi</h3>
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Şehir Adı</th>
                <th>#</th>
                <th>#</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><a href="/Library/UpdateCity/@item.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Library/DeleteCity/@item.Id" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </table>
        <a href="/Library/AddCity" class="btn btn-outline-success">Şehir Ekle</a>
    </div>
</body>
</html>